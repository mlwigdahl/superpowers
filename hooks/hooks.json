{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
			"command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"%CLAUDE_PLUGIN_ROOT%\\hooks\\SessionStart.ps1\" || bash \"$CLAUDE_PLUGIN_ROOT/hooks/session-start.sh\""
          }
        ]
      }
    ]
  }
}
